<Page x:Class="Assignment1.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assignment1.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="AliceBlue"
      Title="LoginPage">

    <StackPanel x:Name="_mainFrame" Background="AliceBlue" Margin="270 60">
        <Label Content="Login" Foreground="Black" FontSize="25" HorizontalAlignment="Center"/>
        <Separator/>
        <Label Content="Username" Foreground="Black"/>
        <TextBox x:Name="txtUsername"/>
        <Label Content="Password" Foreground="Black"/>
        <PasswordBox x:Name="txtPassword"/>
        <Button Click="BtnLogin_Click" x:Name="btnLogin" Margin="80 10" Content="Login" Width="70" HorizontalAlignment="Left"/>
        <!--<Button Click="BtnRegister_Click" x:Name="btnRegister" Margin="80 10" Content="Register" Width="70" HorizontalAlignment="Left"/>-->
    </StackPanel>
</Page>
