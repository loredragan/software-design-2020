<Page x:Class="Assignment_2.View.Pages.AuthenticationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assignment_2.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthenticationPage"
      Background="AliceBlue">

    <StackPanel x:Name="_mainFrame" Background="AliceBlue" Margin="270 60">
        <Label Content="Login" Foreground="Black" FontSize="25" HorizontalAlignment="Center"/>
        <Separator/>
        <Label Content="Username" Foreground="Black"/>
        <TextBox x:Name="txtUsername"/>
        <Label Content="Password" Foreground="Black"/>
        <PasswordBox x:Name="txtPassword"/>
        <Button Click="BtnLogin_Click" x:Name="btnLogin" Margin="80 10" Content="Login" Width="70" HorizontalAlignment="Left"/>
    </StackPanel>
</Page>
